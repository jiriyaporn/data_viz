      "source": [
        "def grade_score(score) :\r\n",
        "  if score >= 0 and score < 50 :\r\n",
        "    print(f' คะแนน {score} จะได้เกรด F')\r\n",
        "  if score >= 50 and score < 55 :\r\n",
        "    print(f' คะแนน {score} จะได้เกรด D')\r\n",
        "  if score >= 55 and score < 60 :\r\n",
        "    print(f' คะแนน {score} จะได้เกรด D+')\r\n",
        "  if score >= 60 and score < 65 :\r\n",
        "    print(f' คะแนน {score} จะได้เกรด C')\r\n",
        "  if score >= 65 and score < 70 :\r\n",
        "    print(f' คะแนน {score} จะได้เกรด C+')\r\n",
        "  if score >= 70 and score < 75 :\r\n",
        "    print(f' คะแนน {score} จะได้เกรด B')\r\n",
        "  if score >= 75 and score < 80 :\r\n",
        "    print(f' คะแนน {score} จะได้เกรด B+')\r\n",
        "  if score >= 80 and score <100 :\r\n",
        "    print(f' คะแนน {score} จะได้เกรด A')\r\n",
        "  if score > 0 and score >100 :\r\n",
        "    print(f' คะแนน {score} จะ error')\r\n",
        "  if score < 0 :\r\n",
        "    print(f' คะแนน {score} จะ error ')\r\n",
        "\r\n",
        "\r\n"
      ],
      "execution_count": 23,
      "outputs": []
    },
